---
// Example src/layout/BlogPostLayout.astro
import MainLayout from '../layouts/MainLayout.astro'
import ArticleFeed from '../components/ArticleFeed.astro'

const {content} = Astro.props;
let article_date = new Date(content.date);
article_date = article_date.getDate() + "/" + (article_date.getMonth()+1) + "/" + article_date.getFullYear()
---
<MainLayout title={content.title} seo_thumbnail={ content.thumbnail } description={content.description}>
    <section class="blog-display">
    <article class="full-page-article">
      <h1>{content.title}</h1>
      <img src={ content.thumbnail }>
  <h5>{content.author} | {article_date}</h5>
  <div class="article-body">
  <slot />
  <p>{content.sources}</p>
  </div>
  <!-- </article>
    <aside class="article-feed-sidebar">
      <ArticleFeed title={content.title} />
      <a class="primary-link" href="/news">More articles</a>
    </aside>
    </section> -->
        <script>
    body_imgs = $(".article-body img");
    even_imgs = []
    for(i=0; i<body_imgs.length; i++){
      if(i%2==1){
        body_imgs.eq(i).addClass("odd")
      }
    }
    </script>
</MainLayout>
